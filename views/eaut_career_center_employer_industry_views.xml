<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="eaut_career_center_employer_industry_view_form" model="ir.ui.view">
        <field name="name">eaut.career.center.employer.industry.view.form</field>
        <field name="model">eaut.career.center.employer.industry</field>
        <field name="arch" type="xml">
            <form string="Lĩnh vực hoạt động">
                <sheet>
                    <group>
                        <field name="name" string="Tên lĩnh vực"/>
                        <field name="description" string="Mô tả"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="eaut_career_center_employer_industry_view_list" model="ir.ui.view">
        <field name="name">eaut.career.center.employer.industry.view.list</field>
        <field name="model">eaut.career.center.employer.industry</field>
        <field name="arch" type="xml">
            <list string="Lĩnh vực hoạt động" editable="top">
                <field name="name" string="Tên lĩnh vực"/>
                <field name="description" string="Mô tả"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_eaut_career_center_employer_industry" model="ir.actions.act_window">
        <field name="name">Lĩnh vực hoạt động</field>
        <field name="res_model">eaut.career.center.employer.industry</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>