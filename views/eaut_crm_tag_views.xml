<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="eaut_crm_tag_view_form" model="ir.ui.view">
        <field name="name">eaut.crm.tag.view.form</field>
        <field name="model">eaut.crm.tag</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <field name="name" string="Tên thẻ"/>
                        <field name="color" string="Màu sắc" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="eaut_crm_tag_view_list" model="ir.ui.view">
        <field name="name">eaut.crm.tag.view.list</field>
        <field name="model">eaut.crm.tag</field>
        <field name="arch" type="xml">
            <list string="Tags" editable="top">
                <field name="name" string="Tên thẻ"/>
                <field name="color" string="Màu sắc" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_eaut_crm_tag" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">eaut.crm.tag</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>