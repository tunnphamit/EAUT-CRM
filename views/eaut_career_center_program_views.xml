<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="eaut_career_center_program_view_form" model="ir.ui.view">
        <field name="name">eaut.career.center.program.view.form</field>
        <field name="model">eaut.career.center.program</field>
        <field name="arch" type="xml">
            <form string="Khóa">
                <sheet>
                    <group>
                        <field name="name" string="Khóa"/>
                        <field name="start_year" string="Năm bắt đầu"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="eaut_career_center_program_view_list" model="ir.ui.view">
        <field name="name">eaut.career.center.program.view.list</field>
        <field name="model">eaut.career.center.program</field>
        <field name="arch" type="xml">
            <list string="Khóa" editable="top">
                <field name="name" string="Khóa"/>
                <field name="start_year" string="Năm bắt đầu"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_eaut_career_center_program" model="ir.actions.act_window">
        <field name="name">Khóa</field>
        <field name="res_model">eaut.career.center.program</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>