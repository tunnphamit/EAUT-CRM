<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view -->
    <record id="eaut_crm_student_view_form" model="ir.ui.view">
        <field name="name">eaut.crm.student.view.form</field>
        <field name="model">eaut.crm.student</field>
        <field name="arch" type="xml">
            <form string="Students">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Họ và tên"/>
                            <group>
                                <!-- Ảnh sinh viên -->
                                <field name="photo" 
                                    widget="image" 
                                    class="oe_avatar"
                                    nolabel="1"
                                    options="{'size': [128, 128]}"/>
                            </group>
                        </h1>
                    </div>

                    <group>
                        <group string="Thông tin cá nhân">
                            <field name="code"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group string="Thông tin đào tạo">
                            <field name="faculty_ids" widget="many2many_tags"/>
                            <field name="major_ids" widget="many2many_tags"/>
                            <field name="program_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <group string="Events">
                        <field name="event_ids" widget="many2many_tags"/>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Thông tin bổ sung">
                            <group>
                                <group>
                                    <field name="parent_name"/>
                                </group>
                                <group>
                                    <field name="parent_phone"/> 
                                </group> 
                            </group>
                        </page>
                    </notebook>
                    
                </sheet>

                <chatter>
                    <!-- Chatter -->
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>

            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="eaut_crm_student_view_list" model="ir.ui.view">
        <field name="name">eaut.crm.student.view.list</field>
        <field name="model">eaut.crm.student</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="code"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="date_of_birth"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_eaut_crm_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">eaut.crm.student</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
