<?xml version="1.0" encoding="utf-8"?>
 <odoo>
    <record id="view_eaut_career_center_student_registration_form" model="ir.ui.view">
        <field name="name">eaut.career.center.student.registration.form</field>
        <field name="model">eaut.career.center.student.registration</field>
        <field name="arch" type="xml">
            <form string="Đăng ký hỗ trợ">
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>

                <sheet>
                    <h1 class="oe_title">
                        <h5>Tiêu đề:</h5>
                        <field name="name"/>
                    </h1>
                    <group>
                        <field name="student_id" widget="many2one"/>
                        <field name="deadline"/>
                        <field name="assign_to"/>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page string="Thông tin bổ sung">
                            <field name="description" nolabel="1" widget="text" options="{'rows': 5}"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter>
                    <!-- Chatter -->
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="view_eaut_career_center_student_registration_list" model="ir.ui.view">
        <field name="name">eaut.career.center.student.registration.list</field>
        <field name="model">eaut.career.center.student.registration</field>
        <field name="arch" type="xml">
            <list string="Đăng ký hỗ trợ">
                <field name="name" string="Tiêu đề"/>
                <field name="student_id" string="Sinh viên"/>
                <field name="deadline" string="Hạn chót"/>
                <field name="assign_to" string="Giao cho"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_eaut_career_center_student_registration" model="ir.actions.act_window">
        <field name="name">Đăng ký hỗ trợ</field>
        <field name="res_model">eaut.career.center.student.registration</field>
        <field name="view_mode">list,form,kanban,graph,pivot</field>
    </record>

</odoo>
