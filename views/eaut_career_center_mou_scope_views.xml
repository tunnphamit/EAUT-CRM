<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="eaut_career_center_mou_scope_view_form" model="ir.ui.view">
        <field name="name">eaut.career.center.mou.scope.view.form</field>
        <field name="model">eaut.career.center.mou.scope</field>
        <field name="arch" type="xml">
            <form string="Phạm vi hợp tác MoU">
                <sheet>
                    <group>
                        <field name="name" string="Tên"/>
                        <field name="color" string="Màu sắc" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- List view -->
    <record id="eaut_career_center_mou_scope_view_list" model="ir.ui.view">
        <field name="name">eaut.career.center.mou.scope.view.list</field>
        <field name="model">eaut.career.center.mou.scope</field>
        <field name="arch" type="xml">
            <list string="Phạm vi hợp tác MoU" editable="top">
                <field name="name" string="Tên"/>
                <field name="color" string="Màu sắc" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="eaut_career_center_mou_scope_action" model="ir.actions.act_window">
        <field name="name">MOU Scope</field>
        <field name="res_model">eaut.career.center.mou.scope</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>